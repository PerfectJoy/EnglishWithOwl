<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
	android:background="@android:color/white"
	android:padding="@dimen/padding_activity">
	
    
	
    <TextView
        android:id="@+id/expertCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_activity"
        android:layout_above="@+id/btnLoadIntermediate"
        android:layout_centerHorizontal="true"
        android:textSize="100sp"
        android:maxLines="1"
        android:textColor="@color/light_red"/>
    
    
    <Button 
        android:id="@+id/btnLoadExpert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/start_lesson"
        android:background="@drawable/btn_expert"
        android:paddingLeft="@dimen/padding_activity"
        android:drawableLeft="@drawable/ic_launcher"
        android:enabled="false"/>
	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80ffffff">
        
        <ImageView
        android:id="@+id/imgLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/lock"/>
        
    </FrameLayout>

</RelativeLayout>
